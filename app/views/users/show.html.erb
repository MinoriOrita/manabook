<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <%= button_to("編集", "/users/#{@user.id}/edit",{method: "post",class: "user-button"}) %>
      <%= button_to("削除","/users/#{@user.id}/destroy",{method: "post",class: "user-button",data: {confirm: "本当に削除しますか？"}}) %>
    </div>
  </div>
  <div class="container">
    <div class="index-heading">今まで借りた本の一覧</div>
      <table class="books-show-item" cellspacing="0">
          <tr>
            <th >タイトル</th>
            <th >著者名</th>
            <th >カテゴリー</th>
            <th >ステータス</th>
          </tr>
        <% @histories.each do |history|  %>
          <tr>
          <% book = Book.find_by(id: history.book_id) %>
            <td>
          　  <div class="book-title">
            　  <%= link_to(book.title, "/books/#{book.id}") %>
          　  </div>
            </td>
            <td>
            　<%= book.author %>
            </td>
            <td>
          　  <%= Book::CATEGORY_HASH[book.category_name.to_i] %>
            </td>
            <td >
          　  <%= book.status %>
          </td>
          </tr>
　　　　<% end %>
      </table>
  </div>
</div>
